<Page x:Class="LifeStory.AboutMenu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LifeStory"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AboutMenu">

    <Grid>
        <TextBlock TextAlignment="Center" FontSize="60" Text="LifeStory" Foreground="White" HorizontalAlignment="Center" Width="250" Height="85" VerticalAlignment="Top" Panel.ZIndex="1" Margin="225,50,225,0"/>
        <Button x:Name="backButton" BorderThickness="0" Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}" Height="125" Width="125" Margin="0,325,0,0" Click="backButton_Click" HorizontalAlignment="Center" VerticalAlignment="Top">
            <TextBlock FontFamily="Segoe MDL2 Assets" Foreground="White" FontWeight="ExtraBold" FontSize="35" Text="&#xE76B;"/>
        </Button>
    </Grid>
</Page>
